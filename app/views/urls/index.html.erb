<% if flash[:notice] %>
  <div class="card-panel notice deep-orange"><%= flash[:notice] %></div>
<% end %>
<div class="row">
  <div class="col m12">
    <%= form_for @url, remote: true do |f| %>
      <div class="card">
        <div class="card-content">
          <div class="row">
            <div class="col m8 offset-m2 center-align">
              <span class="card-title">Create a new short URL</span>
            </div>
          </div>
          <div class="row">
            <div class="col m6 offset-m2">
              <%= f.text_field :original_url, class: 'validate form-control', placeholder: 'Your original URL here' %>
            </div>
            <div class="col m2">
              <%= f.submit 'Shorten URL', class: "waves-effect waves-light btn"  %>
            </div>
          </div>
          <div class="row">
            <div class="col m6 offset-m2">
              <span> e.g http://www.google.com </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table highlight">
  <thead>
    <tr>
      <th scope="col">Short URL</th>
      <th scope="col">Original URL</th>
      <th scope="col">Created</th>
      <th scope="col">Clicks Count</th>
      <th scope="col">Stats</th>
    </tr>
  </thead>
  <tbody class="main_table">
    <%= render 'url_table' %>
  </tbody>
</table>
